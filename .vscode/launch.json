    "version": "0.2.0",
    "configurations": [
        {
            "name": "pyjma",
            "type": "python",
            "request": "launch",
            "module": "jma",
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\src",
            },
            "console": "integratedTerminal"
        },
        {
            "name": "weather_icon",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/weather_icon.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\src",
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "native",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Python310/Python.exe",
            "args": [
                "-m",
                "jma"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\src",
            },
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "environment": [],
            "console": "integratedTerminal"
        },
